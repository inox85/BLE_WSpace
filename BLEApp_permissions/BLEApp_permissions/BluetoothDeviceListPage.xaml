<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BLEApp_permissions.BluetoothDeviceListPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="BluetoothDeviceListPage"
    BackgroundColor="Black">
    <StackLayout>
        <ListView x:Name="DeviceListView" ItemTapped="DeviceListView_ItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Detail="{Binding Address}" Text="{Binding Name}" TextColor="White" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>